{% extends "base.html.jinja" %}

{% block content %}
    <h2>{{ book.title }}</h2>
    <form action="/books/{{ book.id }}" method="POST">
        <div>
            <label for="stock">Amount to sell</label>
            <input type="text" name="stock" id="stock">
        </div>
        <div>
            <input type="submit" name="submit" id="submit" value="Sell">
        </div>
    </form>

{% endblock %}