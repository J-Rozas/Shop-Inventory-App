{% extends "base.html.jinja" %}

{% block content %}
    <div>
        <button><a href="/books/new">Add a new book</a></button>
    </div>
    {% for book in books %}
    <div class="book">
        <h2>
            {{ book.title }}
        </h2>
        <p>
            Publisher: {{ book.publisher.name }}
        </p>
        <p>
            Author: {{ book.author }}
        </p>
        <p>
            Genre: {{ book.genre }}
        </p>
        <p>
            Number of pages: {{ book.number_of_pages }}
        </p>
        <p>
            Price: Â£ {{ book.selling_price}}
        </p>
        <p>
            Stock: {{ book.stock }}
            <!-- Add an icon here to give info about the stock -->
        </p>
    </div>
    {% endfor %}
{% endblock %}